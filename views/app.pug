include /pug-material-design/button

#model

header
nav
    +textButton('home')(
        _=`on click put '/' into the href of the window's location`
    )
    if user
        +textButton('show secret')(
            hx-get='/secret'
            hx-target='#modelSecret'
            hx-push-url='true'
            _=`
                on showSecret from #model add @disabled
                on hideSecret from #model remove @disabled
            `
        )
        | 
        +textButton('logout')(
            hx-post='/users/signout'
            hx-target='main'
        )
    else
        +textButton('register')(
            hx-get='/users/signup'
            hx-target='main'
            hx-push-url='true'
        )
        | 
        +textButton('login')(
            hx-get='/users/signin'
            hx-target='main'
            hx-push-url='true'
        )
    hr
aside
main
    case url.pathname
        when '/'
            if user
                h1 Welcome #{user.email.split('@')[0]}
                p#modelSecret
        default
            //- custom dynamic include
            != include(url.pathname)
footer
